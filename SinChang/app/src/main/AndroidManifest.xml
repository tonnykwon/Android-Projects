<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sinchang.tonythetiger.sinchang" >

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sinchang"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InOutActivity"
            android:label="입출고 현황"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="창고 재고 관리"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".MenuActivity" >
        </activity>
        <activity
            android:name=".ProductListActivity"
            android:label="물품 목록 관리"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".CVSActivity"
            android:label="매장 재고"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".CVSSoldActivity"
            android:label="매장 판매 현황"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
