<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sinchang.tonythetiger.sinchang.MenuActivity">

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="550dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_weight="1">

            <Button
                android:onClick="onWarehouseBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="창고 재고관리"
                android:textSize="40dp"/>

            <Button
                android:onClick="onInOutBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="입출고 현황"
                android:textSize="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1">

            <Button
                android:onClick="onCVSListBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="매장 재고"
                android:textSize="40dp"/>

            <Button
                android:onClick="onCVSSoldBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="매장 판매 현황"
                android:textSize="40dp"/>

        </LinearLayout>

        <Button
            android:onClick="onProductListBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="물품 목록"
            android:textSize="40dp"
            android:layout_weight="1" />


    </LinearLayout>

</RelativeLayout>