<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    >

    <TextView
        android:id="@+id/selectedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/selectedContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/large_text2"
        android:layout_toRightOf="@id/selectedTitle"
        android:layout_alignBaseline="@id/selectedTitle"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <ImageView
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#000000"
        android:layout_below="@id/selectedContent"/>

</RelativeLayout>