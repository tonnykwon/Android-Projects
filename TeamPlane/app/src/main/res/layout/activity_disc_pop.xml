<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    tools:context="com.tony.tonythetiger.team_plane.DiscPopActivity"
    android:paddingTop="16sp"
    android:paddingLeft="16sp"
    android:paddingRight="16sp"
    android:paddingBottom="32sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/discNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14"
        android:layout_gravity="right"/>

        <TextView
            android:id="@+id/discQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discQuestion"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:paddingTop="16sp"
            android:paddingBottom="16sp"/>

        <RadioGroup
            android:id="@+id/discRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/discRadioBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/discRadioBtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/discRadioBtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/discRadioBtn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>

        <Button
            android:onClick="discNextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:layout_gravity="center"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
