<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tony.tonythetiger.team_plane.SignIn2Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치"/>

        <Spinner
            android:id="@+id/locationSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/area_array"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="분야"/>

        <Spinner
            android:id="@+id/fieldSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/field_array"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:id="@+id/text_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="업무"/>

        <Spinner
            android:id="@+id/taskSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/task_array"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이력"/>

        <EditText
            android:id="@+id/edit_history"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:background="@drawable/editboxshape"
            android:layout_marginBottom="16dp"
            />

        <Button
            android:onClick="NextBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
